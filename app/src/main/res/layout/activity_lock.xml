<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/gd"

    tools:context=".LockActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/lumba2"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="100dp"
        app:layout_constraintHeight_min="170dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/topborderx"
        android:orientation="vertical">


            <Button
                android:id="@+id/button2"

                android:background="#ebe8d8"
                android:layout_width="wrap_content"
                android:layout_height="25dp"

                android:layout_weight="1"
                android:text="Personal"
                android:layout_margin="5dp"
                />

            <!--<Button-->
                <!--android:id="@+id/button"-->
                <!--android:layout_margin="5dp"-->
                <!--android:background="#ebe8d8"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="30dp"-->
                <!--android:enabled="false"-->
                <!--android:text="Paket" />-->

            <Button
                android:id="@+id/button3"
                android:background="#ebe8d8"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="Admin##"
                android:enabled="false"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/button4"
                android:layout_margin="5dp"
                android:background="#ebe8d8"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="25dp"

                android:text="Panduan" />

        <TextView
            android:id="@+id/merekHp_tv"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="HP - Kadal\nTime Warning"/>

        <RadioButton
            android:id="@+id/radioButton"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/radiofix"
            android:layout_marginHorizontal="5dp"
            android:checked="true"
            android:text=" Tidak (No)"
            android:textSize="12sp" />


    </LinearLayout>

    <Space
        android:id="@+id/sp1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/ll1"
        app:layout_constraintTop_toTopOf="parent"


        android:layout_width="10dp" />

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_max="250dp"
      app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_min="170dp"
        app:layout_constraintLeft_toRightOf="@+id/sp1"
        android:layout_margin="5dp"

android:background="@drawable/bottomborder"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:background="#0000fe"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/billinglock" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Warnet"
            android:fontFamily="serif"
            android:layout_marginHorizontal="5dp"
            android:textColor="#2d3069"
            android:textStyle="bold"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_height="wrap_content"
            android:textColor="#2d3069"
            android:text="Alamat Warnet" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Email warnet@lumbalumba.com"
            android:textColor="#2d3069" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/ll2"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="5dp"
android:paddingTop="5dp"
        android:paddingHorizontal="20dp"

        android:background="@drawable/dialogbg"

        android:orientation="vertical">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN     PERSONAL"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:textColor="#b6ea43"
            android:textSize="25dp"

            android:text="User Name :" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLength="16"
            android:background="@drawable/bottomborder"
            android:padding="5dp"
            android:inputType="textAutoComplete"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#b6ea43"
            android:textSize="25dp"
            android:visibility="gone"
            android:text="Password :" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:ems="10"
            android:background="@drawable/bottomborder"
            android:padding="5dp"
            android:inputType="textPassword"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ebe8d8"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="OK" />

            <Button
                android:id="@+id/button6"
                android:background="#ebe8d8"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/topborderx"

        android:orientation="vertical">

        <TextClock
            android:id="@+id/textView4"
            android:gravity="center"
            android:format24Hour="HH:mm:ss"
            android:format12Hour="HH:mm:ss"
            android:textSize="20sp"
            android:textColor="#000000"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>