<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/billing_ll"
    android:layout_width="match_parent"
    android:layout_height="265dp"

    android:background="@drawable/billingbg"
    android:orientation="vertical"

    android:padding="5dp">


        <TextView
            android:id="@+id/timer2_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lumba2 Launcher"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"
            android:textColor="#e3e6f2"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingTop="30dp"
            android:paddingLeft="10dp">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="20sp"

                android:text="@string/billingplaceholder" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@id/textView3"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="20sp"

                android:text="@string/billingplaceholder2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@id/textView4"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical">


                <Button
                    android:id="@+id/button5"
                    android:layout_width="64dp"
                    android:background="@drawable/button_bg"
                    android:layout_height="wrap_content"
                    android:text="Info"
                    android:paddingTop="5dp"
                    android:drawableTop="@drawable/ic_info_black_24dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"/>


                <Button
                    android:id="@+id/button7"
                    android:layout_width="64dp"
                    android:paddingTop="5dp"
                    android:background="@drawable/button_bg"
                    android:drawableTop="@drawable/ic_settings_black_24dp"
                    android:layout_height="wrap_content"
                    android:text="Setting"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/button9"
                    android:layout_width="64dp"
                    android:paddingTop="5dp"
                    android:background="@drawable/button_bg"
                    android:drawableTop="@drawable/ic_stop_black_24dp"
                    android:layout_height="wrap_content"
                    android:text="Stop"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"/>



            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
